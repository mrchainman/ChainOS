<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE policyconfig PUBLIC "-//freedesktop//DTD polkit Policy Configuration 1.0//EN"
"http://www.freedesktop.org/software/polkit/policyconfig-1.dtd">
<policyconfig>

  <vendor>garuda-assistant</vendor>
  <vendor_url>https://gitlab.com/garuda-linux/applications/garuda-assistant</vendor_url>

  <action id="org.garuda.garuda-assistant.pkexec.policy.run">
    <description>Run Garuda Assistant</description>
    <message>Authentication is required to complete this Garuda Assistant action</message>
    <icon_name>garuda-assistant</icon_name>
    <defaults>
      <allow_any>no</allow_any>
      <allow_inactive>no</allow_inactive>
      <allow_active>auth_admin</allow_active>
    </defaults>
    <annotate key="org.freedesktop.policykit.exec.path">/usr/share/garuda/scripts/garuda-assistant/bg-rootshell.sh</annotate>
  </action>

  <action id="org.garuda.garuda-assistant.pkexec.policy.run-root-terminal">
    <description>Execute Garuda Assistant action</description>
    <message>Authentication is required to complete this Garuda Assistant action</message>
    <icon_name>garuda-assistant</icon_name>
    <defaults>
      <allow_any>no</allow_any>
      <allow_inactive>no</allow_inactive>
      <allow_active>auth_admin</allow_active>
    </defaults>
    <annotate key="org.freedesktop.policykit.exec.path">/usr/share/garuda/scripts/garuda-assistant/rootshell.sh</annotate>
  </action>

</policyconfig>
